<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/AppDialogTheme</item>
    </style>

    <!-- Define your custom dialog theme here extending from base -->
    <style name="AppDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ProfileNameText">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProfileTagLineText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProfileLocationText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gull_grey</item>
    </style>

    <style name="ProfileCountText">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ProfileCountLabelText">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/gull_grey</item>
    </style>

    <style name="TweetUserNameText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TweetScreenName">
        <item name="android:textColor">@color/gull_grey</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TweetCreatedAt">
        <item name="android:textColor">@color/gull_grey</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TweetText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/tweetText</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">5dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="LoginButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TweetButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/shape_btn_border</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:minWidth">70dp</item>
    </style>

    <style name="TweetCountText">
        <item name="android:textColor">@color/gull_grey</item>
    </style>

</resources>
